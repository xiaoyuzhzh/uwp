<Page
    x:Class="ComplicatedApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ComplicatedApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition  Height="auto"/>
            <RowDefinition  Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel>
            <Button x:ConnectionId='6' 
                Name="HamburgerButton" 
                FontFamily="Segoe MDL2 Assets" 
                Content="&#xE700;" 
                FontSize="36"
                                             
                RelativePanel.AlignLeftWithPanel="True"
                />
            <Button x:ConnectionId='7'
                Name="BackButton"
                RelativePanel.RightOf="HamburgerButton"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE0A6;"
                FontSize="36" 
                Visibility="Collapsed"
                                  
                Background="Transparent"
                
                >

            </Button>
            <TextBlock x:ConnectionId='8' 
                Name="TitleText"
                RelativePanel.RightOf="BackButton"
                FontSize="28"
                FontWeight="Bold" Margin="20,5,0,0"
                >
                Financial
            </TextBlock>
            <Button x:ConnectionId='9'
                Name="SearchButton"
                RelativePanel.AlignRightWithPanel="True"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE1A3;"
                FontSize="36"
                />
            <TextBox
                RelativePanel.LeftOf="SearchButton"
                PlaceholderText="Search"
                Width="200"
                FontSize="27"
                >

            </TextBox>
        </RelativePanel>
        <SplitView x:ConnectionId='1' 
            Name="RootSplitView"
            Grid.Row="1"
            DisplayMode="CompactOverlay"
            OpenPaneLength="220"
            CompactPaneLength="56"
            HorizontalAlignment="Left"
            >
            <SplitView.Pane>
                <ListBox x:ConnectionId='2'
                    SelectionMode="Single"
                    Name="IconMenu"
                                                                
                    >
                    <ListBoxItem x:ConnectionId='3' Name="FinancialListBoxItem" 
                             
                                 >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                FontFamily="Segoe MDL2 Assets" 
                                    Text="&#xE10F;"
                                FontSize="36"
                                Margin="0,5,0,0"
                                ></TextBlock>
                            <TextBlock
                                Text="Financial"
                                FontSize="36"
                                Margin="20,0,0,0"
                                ></TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='4' Name="FoodListBoxItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                FontFamily="Segoe MDL2 Assets" 
                                    Text="&#xE1CE;"
                                FontSize="36"
                                Margin="0,5,0,0"
                                ></TextBlock>
                            <TextBlock
                                Text="Food"
                                FontSize="36"
                                Margin="20,0,0,0"
                                ></TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='5' Name="ContFrame">

                </Frame>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

