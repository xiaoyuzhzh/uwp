<Page x:ConnectionId='1'
    x:Class="SoundBoard.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoundBoard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:SoundBoard.Model"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <RelativePanel>
            <Button x:ConnectionId='8' Name="HamburgerButton"
                    RelativePanel.AlignLeftWithPanel="True"
                                                 
                    FontFamily="Segoe MDL2 Assets"
                    Height="45"
                    Width="45"
                    Content="&#xE700;"
                />
            
            <Button x:ConnectionId='9' Name="BackButton"
                    RelativePanel.RightOf="HamburgerButton"
                                              
                    FontFamily="Segoe MDL2 Assets"
                    Height="45"
                    Width="45"
                    Content="&#xE0A6;"
                    />

            <AutoSuggestBox x:ConnectionId='10' Name="SearchAutoSuggestBox"
                            PlaceholderText="Search for Sound"
                            RelativePanel.AlignRightWithPanel="True"
                            Width="200"
                            QueryIcon="Find"
                                                                          
                                                                                
                            
                            />
        </RelativePanel>

        <SplitView x:ConnectionId='2' Grid.Row="1" Name="MySplitView" 
                   DisplayMode="CompactOverlay" 
                   CompactPaneLength="45" 
                   OpenPaneLength="200">
            <SplitView.Pane>
                <ListView x:ConnectionId='3' Name="MenuItemListView"  
                          IsItemClickEnabled="True"
                                                        >
                    
                </ListView>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <MediaElement x:ConnectionId='4' Name="MyMediaEelment"
                                  AutoPlay="True" />

                    <TextBlock x:ConnectionId='5' Name="CategoryTextBlock"
                               Text="All Sounds"
                               FontSize="24" />

                    <GridView x:ConnectionId='6' Grid.Row="1"
                              Name="SountGridView"
                              SelectionMode="None"
                              IsItemClickEnabled="True"
                                                           
                                                                 >
                        <GridView.ItemTemplate>
                            <DataTemplate                        >
                                <Image x:ConnectionId='7' Name="MyImage"
                                       Height="112"
                                       Width="101"
                                                                  
                                       />
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        
                    </GridView>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

