<UserControl x:ConnectionId='1'
    x:Class="AdaptiveChallenge.NewsTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdaptiveChallenge"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="group">
                <VisualState x:ConnectionId='3' x:Name="narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NewsPanel.Width" Value="200"/>
                        <Setter Target="NewsPanel.Height" Value="275"/>
                        <Setter Target="headline.FontSize" Value="18"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="900"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NewsPanel.Width" Value="400"/>
                        <Setter Target="NewsPanel.Height" Value="400"/>
                        <Setter Target="headline.FontSize" Value="26"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel x:ConnectionId='5' 
                                Orientation="Vertical" 
                                Name="NewsPanel"
                                Width="200"
                                Height="275"
                                >
            <Image x:ConnectionId='6' 
                                                                
                                    Stretch="UniformToFill"
                                    ></Image>
            <TextBlock x:ConnectionId='7' Name="headline"
                                           FontSize="18"
                                                                 ></TextBlock>
            <TextBlock x:ConnectionId='8' 
                                    FontSize="16"
                                                                ></TextBlock>
            <TextBlock x:ConnectionId='9' 
                                    FontSize="12"
                                                                 ></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>

